<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_background" format="color|integer"/>
        <attr name="ci_selected_background" format="color|integer"/>
        <attr name="ci_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0"/>
            <enum name="outside" value="1"/>
            <enum name="solo" value="2"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="TipView">
        <attr name="zjf_type">
            <enum name="loading" value="0"/>
            <enum name="empty_data" value="1"/>
            <enum name="error" value="2"/>
            <enum name="net_error" value="3"/>
            <enum name="custom" value="4"/>
        </attr>
        <attr name="zjf_custom_view" format="integer|reference"/>
        <attr name="zjf_tip_img" format="integer|reference"/>
        <attr name="zjf_tip_msg" format="integer|string|reference"/>
    </declare-styleable>

</resources>